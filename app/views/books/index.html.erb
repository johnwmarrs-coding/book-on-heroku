<h1>Book Management Website</h1>

<% flash.each do |type, msg|%>
	<div class="alert alert-danger"><%= msg %></div>
<% end %>

<h3>Existing Books</h3>
<hr>
<% @books.each do |book| %>
	<div class="card">
		<div class="card-body">
			<h3><%= book.title%></h3>
			<p>Author: <%= book.author %></p>
			<%= link_to "Details", book_path(book), class: 'btn btn-secondary'%>
		</div>
	</div>

<% end %>
<br>
<div class="card">
	<%= link_to "Add Book", new_book_path, class: 'btn btn-primary'%>
</div>
